openapi: 3.1.0
info:
  title: Minecraft Items API v2
  description: API for retrieving Minecraft item, block, and effects information

servers:
  - url: https://api.petarmc.com/
    description: Production server
  - url: http://localhost:3000/
    description: Local development server


paths:
  /v2/name/items/{version}/{itemName}:
    get:
      tags:
        - Items
      summary: Get item information by version and name
      parameters:
        - name: version
          in: path
          description: Minecraft version
          required: true
          schema:
            type: string
            enum:
              - '1.9'
              - '1.10'
              - '1.11'
              - '1.12'
              - '1.13'
              - '1.14'
              - '1.15'
              - '1.16'
              - '1.17'
              - '1.18'
              - '1.19'
              - '1.20'
        - name: itemName
          in: path
          description: Name of the Minecraft item
          required: true
          schema:
            type: string
      responses:
        '200':
          description: Successful response
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/Item'
        '404':
          description: Item not found
  /v2/id/items/{version}/{itemId}:
    get:
      tags:
        - Items
      summary: Get item information by version and ID
      parameters:
