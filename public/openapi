components:
  schemas:
    Item:
      type: object
      properties:
        id:
          type: number
        displayname:
          type: string
        name:
          type: string
        stacksize:
          type: number
    Block:
      type: object
      properties:
        id:
          type: number
        displayName:
          type: string
        name:
          type: string
        hardness:
          type: number
        stackSize:
          type: number
    Effect:
      type: object
      properties:
        id:
          type: number
        name:
          type: string
        displayName:
          type: string
        type:
          type: string
    Biome:
      type: object
      properties:
        id:
          type: integer
        name:
          type: string
        category:
          type: string
        temperature:
          type: number
        precipitation:
          type: string
        depth:
          type: number
        dimension:
          type: string
        displayName:
          type: string
        color:
          type: integer
        rainfall:
          type: number
        child:
          type: integer
