{
  "openapi": "3.1.0",
  "info": {
    "title": "Petar's Minecraft API v2",
    "description": "API for retrieving Minecraft item and block information",
    "version": "1.0.0"
  },
  "paths": {
    "/api/items/name/{version}/{itemName}": {
      "get": {
        "tags":["Items"],
        "summary": "Get item information by version and name",
        "parameters": [
          {
            "name": "version",
            "in": "path",
            "description": "Minecraft version",
            "required": true,
            "schema": {
              "type": "string",
              "enum": [
                "1.11",
                "1.12",
                "1.13",
                "1.14",
                "1.15",
                "1.16",
                "1.17",
                "1.18",
                "1.19",
                "1.20"
              ]
            }
            
          },
          {
            "name": "itemName",
            "in": "path",
            "description": "Name of the Minecraft item",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Item"
                }
              }
            }
          },
          "404": {
            "description": "Item not found"
          }
        }
      }
    },
    "/api/items/id/{version}/{itemId}": {
      "get": {
        "tags":["Items"],
        "summary": "Get item information by version and ID",
        "parameters": [
          {
            "name": "version",
            "in": "path",
            "description": "Minecraft version",
            "required": true,
            "schema": {
              "type": "string",
              "enum": [
                "1.11",
                "1.12",
                "1.13",
                "1.14",
                "1.15",
                "1.16",
                "1.17",
                "1.18",
                "1.19",
                "1.20"
              ]
            }
          },
          {
            "name": "itemId",
            "in": "path",
            "description": "ID of the Minecraft item",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Item"
                }
              }
            }
          },
          "404": {
            "description": "Item not found"
          }
        }
      }
    },
    "/api/blocks/{version}/{blockName}": {
      "get": {
        "tags":["Blocks"],
        "summary": "Get block information by version and name",
        "parameters": [
          {
            "name": "version",
            "in": "path",
            "description": "Minecraft version",
            "required": true,
            "schema": {
              "type": "string",
              "enum": [
                "1.11",
                "1.12",
                "1.13",
                "1.14",
                "1.15",
                "1.16",
                "1.17",
                "1.18",
                "1.19",
                "1.20"
              ]
            }
          },
          {
            "name": "blockName",
            "in": "path",
            "description": "Name of the Minecraft block",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Block"
                }
              }
            }
          },
          "404": {
            "description": "Block not found"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Item": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "id": {
            "type": "integer"
          }
        }
      },
      "Block": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "id": {
            "type": "integer"
          }
        }
      }
    }
  }
}
