      "get": {
        "tags": ["Items"],
        "summary": "Get item information by version and name",
        "parameters": [
          {
            "name": "version",
            "in": "path",
            "description": "Minecraft version",
            "required": true,
            "type": "string",
            "enum": [
              "1.9",
              "1.10",
              "1.11",
              "1.12",
              "1.13",
              "1.14",
              "1.15",
              "1.16",
              "1.17",
              "1.18",
              "1.19",
              "1.20"
            ]
          },
          {
            "name": "itemName",
            "in": "path",
            "description": "Name of the Minecraft item",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "schema": {
              "$ref": "#/definitions/Item"
            }
          },
          "404": {
            "description": "Item not found"
